<Window x:Class="RadiationRate.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadiationRate"
        mc:Ignorable="d"
        Title="Radiation Rate" Height="450" Width="800" AllowDrop="True">
    <DockPanel Name="MainPanel" Drop="MainPanel_Drop">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Name="OpenFolderButton"  Header="_Open folder" Click="OpenFolderButton_Click" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
